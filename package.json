{
  "name": "exercise-boilerplate",
  "version": "0.5.0",
  "license": "MIT",
  "main": "src/main.tsx",
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "postinstall": "tsr generate && playwright install --with-deps && pnpm run licenses",
    "start": "vite",
    "build": "vite build",
    "serve": "node ./server.mjs",
    "build:watch": "(pnpm build --watch &) && pnpm serve",
    "i18n": "lingui extract --clean && lingui compile --typescript --strict",
    "test": "vitest",
    "test:ci": "vitest --run --bail=1",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write",
    "licenses": "pnpm licenses ls --prod --json > licenses.json",
    "check": "pnpm check:runtime && pnpm check:project",
    "check:runtime": "pnpm i18n && pnpm lint && pnpm typecheck && pnpm build && pnpm test:ci",
    "check:project": "pnpm dedupe --check && knip && dpdm --no-warning --no-tree ./**/* && pnpm audit",
    "docker:build": "docker build -t exercise-boilerplate-image .",
    "docker:run": "docker run -p 8080:8080 --rm -it --name exercise-boilerplate exercise-boilerplate-image"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/static": "^8.1.1",
    "@lingui/cli": "^5.3.0",
    "@lingui/core": "^5.3.0",
    "@lingui/detect-locale": "^5.3.0",
    "@lingui/format-po": "^5.3.0",
    "@lingui/react": "^5.3.0",
    "@lingui/swc-plugin": "^5.5.1",
    "@lingui/vite-plugin": "^5.3.0",
    "@mantine/core": "^7.17.4",
    "@mantine/nprogress": "^7.17.4",
    "@tanstack/react-pacer": "^0.1.0",
    "@tanstack/react-router": "^1.115.2",
    "@tanstack/router-plugin": "^1.115.2",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "fastify": "^5.2.2",
    "lucide-react": "^0.487.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^6.2.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.1",
    "@tanstack/react-router-devtools": "^1.115.2",
    "@tanstack/router-cli": "^1.115.2",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-istanbul": "^3.1.1",
    "dpdm": "^3.14.0",
    "knip": "^5.50.2",
    "playwright": "^1.51.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "resolutions": {
    "esbuild": "^0.25.0"
  }
}
