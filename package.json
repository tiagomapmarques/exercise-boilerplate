{
  "name": "exercise-boilerplate",
  "version": "0.7.3",
  "license": "MIT",
  "main": "src/main.tsx",
  "engines": {
    "node": "^22.18.0 || ^24.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "engineStrict": true,
  "scripts": {
    "postinstall": "playwright install --with-deps && pnpm run licenses && tsr generate && ./bin/env-file",
    "start": "vite",
    "build": "vite build",
    "serve": "node ./server.mjs",
    "build:watch": "(pnpm build --watch &) && pnpm serve",
    "i18n": "lingui extract --clean && lingui compile --typescript --strict",
    "test": "vitest --run --bail=1",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write --error-on-warnings",
    "licenses": "pnpm licenses ls --prod --json > licenses.json",
    "check": "pnpm check:project && pnpm check:runtime && pnpm check:other",
    "check:project": "pnpm dedupe --check && knip && dpdm --no-warning --no-tree ./**/*",
    "check:runtime": "pnpm i18n && pnpm lint && pnpm typecheck && pnpm build && pnpm test",
    "check:other": "pnpm audit && ./bin/uncommitted-changes",
    "docker:build": "docker build -t exercise-boilerplate-image .",
    "docker:run": "docker run -p 8080:8080 --rm -it --name exercise-boilerplate exercise-boilerplate-image"
  },
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/static": "^8.2.0",
    "@lingui/cli": "^5.4.1",
    "@lingui/core": "^5.4.1",
    "@lingui/detect-locale": "^5.4.1",
    "@lingui/format-po": "^5.4.1",
    "@lingui/react": "^5.4.1",
    "@lingui/swc-plugin": "^5.6.1",
    "@lingui/vite-plugin": "^5.4.1",
    "@mantine/core": "^8.2.7",
    "@mantine/nprogress": "^8.2.7",
    "@tanstack/react-router": "^1.131.28",
    "@tanstack/router-plugin": "^1.131.28",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "country-flag-icons": "^1.5.19",
    "fastify": "^5.5.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vite": "^7.1.3",
    "vite-plugin-static-copy": "^3.1.2",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@tanstack/react-router-devtools": "^1.131.28",
    "@tanstack/router-cli": "^1.131.28",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.18.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "dpdm": "^3.14.0",
    "knip": "^5.63.0",
    "playwright": "^1.55.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
