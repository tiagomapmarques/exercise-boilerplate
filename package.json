{
  "name": "exercise-boilerplate",
  "version": "0.10.2",
  "license": "MIT",
  "engines": {
    "node": "^25.5.0 || ^24.13.0",
    "pnpm": "^10.28.2"
  },
  "devEngines": {
    "packageManager": {
      "name": "pnpm"
    }
  },
  "engineStrict": true,
  "scripts": {
    "postinstall": "playwright install --with-deps && pnpm run licenses && tsr generate && ./bin/env-file",
    "start": "vite",
    "build": "vite build",
    "serve": "node ./server.mjs",
    "build:watch": "(pnpm build --watch &) && pnpm serve",
    "i18n": "lingui extract --clean && lingui compile --typescript --strict",
    "test": "vitest --run --bail=1",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write --error-on-warnings",
    "lint:rewrite": "biome migrate --write && ./bin/biome-file",
    "licenses": "pnpm licenses ls --prod --json > licenses.json && pnpm licenses ls --dev --json > licenses.dev.json",
    "dependencies": "taze major --maturity-period 3 --include-locked --peer --exclude \"@swc/core\" --interactive --write --install",
    "dependencies:rewrite": "rimraf ./pnpm-lock.yaml && git clean -fdx -e .env -e TODO && pnpm install",
    "check": "pnpm check:project && pnpm check:runtime && pnpm check:other",
    "check:ci": "pnpm install && pnpm check:project && pnpm check:runtime && ./bin/check-engines && ./bin/uncommitted-changes --error-on-warnings",
    "check:project": "pnpm dedupe --check && knip && dpdm --no-warning --no-tree ./**/*",
    "check:runtime": "pnpm i18n && pnpm lint && pnpm typecheck && pnpm build && pnpm test",
    "check:other": "taze major --maturity-period 3 --include-locked --peer --exclude \"@swc/core\" && ./bin/check-engines && ./bin/uncommitted-changes && pnpm audit",
    "docker:build": "docker build -t exercise-boilerplate-app .",
    "docker:run": "docker run -p 8080:8080 --rm -it --name exercise-boilerplate-app-container exercise-boilerplate-app",
    "docker:ci": "pnpm docker:ci:build && pnpm docker:ci:copy && pnpm docker:ci:clean",
    "docker:ci:build": "docker build -t exercise-boilerplate-ci -f Dockerfile.ci . && docker container create --name exercise-boilerplate-ci-container exercise-boilerplate-ci",
    "docker:ci:copy": "docker cp exercise-boilerplate-ci-container:/reports .",
    "docker:ci:clean": "docker rm exercise-boilerplate-ci-container && docker image rm exercise-boilerplate-ci"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.1",
    "@fastify/static": "^9.0.0",
    "@lingui/cli": "^5.9.0",
    "@lingui/core": "^5.9.0",
    "@lingui/detect-locale": "^5.9.0",
    "@lingui/format-po": "^5.9.0",
    "@lingui/react": "^5.9.0",
    "@lingui/swc-plugin": "^5.10.1",
    "@lingui/vite-plugin": "^5.9.0",
    "@mantine/core": "^8.3.13",
    "@mantine/nprogress": "^8.3.13",
    "@tanstack/react-router": "^1.157.11",
    "@tanstack/router-plugin": "^1.157.11",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "country-flag-icons": "^1.6.8",
    "fastify": "^5.7.1",
    "lucide-react": "^0.563.0",
    "postcss-preset-mantine": "^1.18.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "vite": "^7.3.1",
    "vite-plugin-static-copy": "^3.1.6",
    "vite-tsconfig-paths": "^6.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@tanstack/devtools-vite": "^0.4.1",
    "@tanstack/react-devtools": "^0.9.2",
    "@tanstack/react-router-devtools": "^1.157.11",
    "@tanstack/router-cli": "^1.157.11",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-istanbul": "^4.0.18",
    "dpdm": "^3.14.0",
    "knip": "^5.82.1",
    "node-html-parser": "^7.0.2",
    "playwright": "^1.58.0",
    "rimraf": "^6.1.2",
    "taze": "^19.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "resolutions": {
    "@swc/core": "1.15.5"
  }
}
