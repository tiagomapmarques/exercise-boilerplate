{
  "name": "exercise-boilerplate",
  "version": "0.1.0",
  "license": "MIT",
  "main": "src/main.tsx",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.7.1",
  "scripts": {
    "postinstall": "playwright install --with-deps && tsr generate && pnpm run licenses",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "i18n": "lingui extract --clean && lingui compile --typescript --strict",
    "test": "vitest",
    "test:ci": "vitest --run --bail=1",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write --log-level warn",
    "lint": "oxlint . -c .oxlintrc.json --deny-warnings --fix",
    "licenses": "pnpm licenses ls --json > licenses.json",
    "check": "pnpm check:runtime && pnpm check:project",
    "check:runtime": "pnpm i18n && pnpm format && pnpm lint && pnpm typecheck && pnpm build && pnpm test:ci",
    "check:project": "pnpm dedupe --check && pnpm prune && knip && dpdm --no-warning --no-tree ./**/* && pnpm audit"
  },
  "dependencies": {
    "@lingui/core": "^5.3.0",
    "@lingui/detect-locale": "^5.3.0",
    "@lingui/react": "^5.3.0",
    "@mantine/core": "^7.17.3",
    "@mantine/hooks": "^7.17.3",
    "@tanstack/react-router": "^1.114.32",
    "lucide-react": "^0.485.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@lingui/cli": "^5.3.0",
    "@lingui/format-po": "^5.3.0",
    "@lingui/swc-plugin": "^5.5.1",
    "@lingui/vite-plugin": "^5.3.0",
    "@tanstack/react-router-devtools": "^1.114.32",
    "@tanstack/router-cli": "^1.114.32",
    "@tanstack/router-plugin": "^1.114.32",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.17",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-istanbul": "^3.1.1",
    "dpdm": "^3.14.0",
    "knip": "^5.46.5",
    "oxlint": "^0.16.4",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "resolutions": {
    "esbuild": "^0.25.0"
  }
}
