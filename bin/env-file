#!/usr/bin/env node
/** biome-ignore-all lint/suspicious/noConsole: Useful as this is a script */
import { existsSync, writeFileSync } from 'node:fs';

const startTime = Date.now();

const envFile = `${import.meta.dirname}/../.env`;
const defaultEnvFileContent = `
VITE_API_KEY=PUBLIC_API_KEY_VALUE
`;

if (!existsSync(envFile)) {
  writeFileSync(envFile, defaultEnvFileContent.substring(1), 'utf8');
  console.log(`Generated .env file in ${Date.now() - startTime}ms`);
}
