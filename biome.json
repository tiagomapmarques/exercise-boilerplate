{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*",
      "!**/.swc",
      "!**/.tanstack",
      "!**/.tmp",
      "!**/coverage",
      "!**/dist",
      "!**/node_modules",
      "!**/__screenshots__",
      "!**/TODO",
      "!**/.env",
      "!**/licenses.json",
      "!**/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": true,
        "noNoninteractiveElementInteractions": "error"
      },
      "complexity": {
        "recommended": true,

        "noExcessiveNestedTestSuites": "error",

        "noImplicitCoercions": "error",
        "noUselessStringConcat": "error",
        "noVoid": "error",
        "useSimplifiedLogicExpression": "error"
      },
      "correctness": {
        "recommended": true,
        "noGlobalDirnameFilename": "error",
        "noNestedComponentDefinitions": "error",

        "noReactPropAssignments": "error",
        "noRenderReturnValue": "error",

        "noUndeclaredDependencies": "error",
        "noUndeclaredVariables": "error",
        "useExhaustiveDependencies": "error",

        "useJsxKeyInIterable": "error",
        "useSingleJsDocAsterisk": "error",
        "useUniqueElementIds": {
          "level": "error",
          "options": {
            "excludedComponents": ["Trans", "Plural"]
          }
        }
      },
      "performance": {
        "recommended": true,

        "noNamespaceImport": "error"
      },
      "security": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true,
        "noAlert": "warn",

        "noConsole": "warn",
        "noConstantBinaryExpressions": "warn",

        "noDuplicateTestHooks": "warn",
        "noEmptyBlockStatements": "warn",

        "noExportsInTest": "warn",
        "noFocusedTests": "warn",

        "noMisplacedAssertion": "warn",

        "noSkippedTests": "warn",
        "noUnassignedVariables": "warn",
        "noVar": "warn",

        "useErrorMessage": "warn",

        "noDuplicateProperties": "off",
        "noUnknownAtRules": "off"
      },
      "style": {
        "recommended": true,
        "noCommonJs": "error",
        "noDefaultExport": "error",
        "noDoneCallback": "error",
        "noEnum": "error",

        "noInferrableTypes": "error",
        "noMagicNumbers": "error",

        "noNestedTernary": "error",
        "noParameterAssign": "error",
        "noParameterProperties": "error",

        "noRestrictedGlobals": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "@lingui/core": {
                "allowImportNames": ["I18n", "Messages", "setupI18n"]
              },
              "@testing-library/react": {},
              "@vitest/browser/context": {}
            }
          }
        },

        "noSubstr": "error",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "error",
        "noYodaExpression": "error",
        "useAsConstAssertion": "error",
        "useAtIndex": "error",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "error",
        "useCollapsedIf": "error",
        "useComponentExportOnlyModules": "error",
        "useConsistentArrayType": "error",
        "useConsistentBuiltinInstantiation": "error",
        "useConsistentCurlyBraces": "error",
        "useConsistentMemberAccessibility": {
          "level": "error",
          "options": {
            "accessibility": "explicit"
          }
        },
        "useConsistentObjectDefinitions": "error",
        "useDefaultParameterLast": "error",
        "useDefaultSwitchClause": "error",

        "useExplicitLengthCheck": "error",

        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        },
        "useForOf": "error",
        "useFragmentSyntax": "error",
        "useGroupedAccessorPairs": "error",
        "useNamingConvention": "error",

        "useNumberNamespace": "error",
        "useNumericSeparators": "error",
        "useObjectSpread": "error",
        "useReadonlyClassProperties": "error",
        "useSelfClosingElements": "error",
        "useShorthandAssign": "error",
        "useSingleVarDeclarator": "error",
        "useSymbolDescription": "error",
        "useThrowNewError": "error",
        "useThrowOnlyError": "error",
        "useTrimStartEnd": "error",
        "useUnifiedTypeSignatures": "error"
      },
      "nursery": {
        "recommended": true,
        "noFloatingPromises": "warn",
        "noImportCycles": "warn",
        "noMisusedPromises": "warn",
        "noNextAsyncClientComponent": "warn",
        "noNonNullAssertedOptionalChain": "warn",

        "noShadow": "warn",
        "noUnnecessaryConditions": "warn",

        "noUselessUndefined": "warn",

        "useAnchorHref": "error",
        "useConsistentTypeDefinitions": {
          "level": "warn",
          "options": {
            "style": "type"
          }
        },
        "useExhaustiveSwitchCases": "warn",

        "useMaxParams": "warn",

        "useReactFunctionComponents": "warn"
      }
    }
  },
  "javascript": {
    "globals": ["vi"],
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              "vitest",
              "react",
              "react-dom",
              "react-dom/client",
              ":PACKAGE:",
              ":BLANK_LINE:",
              "@/testing",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.test.*"],
      "linter": {
        "rules": {
          "style": {
            "noMagicNumbers": "off"
          }
        }
      }
    }
  ]
}
