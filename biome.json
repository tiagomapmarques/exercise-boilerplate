{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*",
      "!**/.swc",
      "!**/.tanstack",
      "!**/.tmp",
      "!**/coverage",
      "!**/dist",
      "!**/node_modules",
      "!**/.env",
      "!**/licenses.json",
      "!**/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": "warn",
      "correctness": {
        "useUniqueElementIds": {
          "level": "error",
          "options": {
            "excludedComponents": ["Trans"]
          }
        }
      },
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "@lingui/core": {
                "allowImportNames": ["I18n", "Messages", "setupI18n"]
              },
              "@testing-library/react": {},
              "@vitest/browser/context": {}
            }
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              "vitest",
              "react",
              "react-dom",
              "react-dom/client",
              ":PACKAGE:",
              ":BLANK_LINE:",
              "@/testing",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  }
}
