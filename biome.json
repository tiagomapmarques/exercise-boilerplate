{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*",
      "!**/.swc",
      "!**/.tanstack",
      "!**/.tmp",
      "!**/coverage",
      "!**/dist",
      "!**/node_modules",
      "!**/__screenshots__",
      "!**/TODO",
      "!**/.env",
      "!**/licenses.json",
      "!**/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "useUniqueElementIds": {
          "level": "error",
          "options": {
            "excludedComponents": ["Trans"]
          }
        },
        "noUndeclaredDependencies": "error",
        "noUndeclaredVariables": "error",
        "useSingleJsDocAsterisk": "error"
      },
      "performance": {
        "recommended": true,
        "noNamespaceImport": "error"
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "noDefaultExport": "error",
        "noNestedTernary": "error",
        "noUnusedTemplateLiteral": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "@lingui/core": {
                "allowImportNames": ["I18n", "Messages", "setupI18n"]
              },
              "@testing-library/react": {},
              "@vitest/browser/context": {}
            }
          }
        }
      },
      "suspicious": {
        "recommended": true,
        "noConsole": "warn",
        "noAlert": "warn",
        "noDuplicateTestHooks": "warn",
        "noEmptyBlockStatements": "warn",
        "noExportsInTest": "warn",
        "noFocusedTests": "warn",
        "noMisplacedAssertion": "warn",
        "noSkippedTests": "warn",
        "noVar": "warn",
        "useErrorMessage": "warn"
      },
      "nursery": {
        "recommended": true,
        "noShadow": "warn",
        "noUnnecessaryConditions": "warn",
        "noUselessUndefined": "warn",
        "useConsistentTypeDefinitions": {
          "level": "warn",
          "options": {
            "style": "type"
          }
        },
        "useReactFunctionComponents": "warn"
      }
    }
  },
  "javascript": {
    "globals": ["vi"],
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              "vitest",
              "react",
              "react-dom",
              "react-dom/client",
              ":PACKAGE:",
              ":BLANK_LINE:",
              "@/testing",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  }
}
